{
  "name": "gallop-arena",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --bun vite",
    "build": "bun run --bun run-p type-check \"build-only {@}\" --",
    "preview": "bun run --bun vite preview",
    "test:unit": "bun run --bun vitest",
    "test:e2e": "bun run --bun start-server-and-test preview http://localhost:4173 'cypress run --e2e'",
    "test:e2e:dev": "bun run --bun start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
    "build-only": "bun run --bun vite build",
    "type-check": "bun run --bun vue-tsc --build",
    "lint:oxlint": "bun run --bun oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "bun run --bun eslint . --fix",
    "lint": "bun run --bun run-s lint:*",
    "format": "bun run --bun prettier --write src/",
    "release": "bun run --bun semantic-release"
  },
  "dependencies": {
    "pinia": "^3.0.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.7",
    "@semantic-release/npm": "^10.0.4",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@tsconfig/node22": "^22.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitest/eslint-plugin": "^1.1.39",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "cypress": "^14.2.1",
    "eslint": "^9.22.0",
    "eslint-plugin-cypress": "^4.2.0",
    "eslint-plugin-oxlint": "^0.16.0",
    "eslint-plugin-vue": "~10.0.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.0.0",
    "npm-run-all2": "^7.0.2",
    "oxlint": "^0.16.0",
    "prettier": "3.5.3",
    "start-server-and-test": "^2.0.11",
    "typescript": "~5.8.0",
    "vite": "^6.2.4",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vitest": "^3.1.1",
    "vue-tsc": "^2.2.8",
    "semantic-release": "^23.0.2"
  }
}
